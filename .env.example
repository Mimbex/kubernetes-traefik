# Odoo Configuration
ODOO_DOMAIN=odoo19.yourdomain.com
ODOO_VERSION=19.0
ODOO_REPLICAS=1
ODOO_ADMIN_PASSWD=change_this_master_password_now

# PostgreSQL Configuration
POSTGRES_VERSION=17
POSTGRES_USER=odoo
POSTGRES_PASSWORD=odoo_secure_password_change_me
