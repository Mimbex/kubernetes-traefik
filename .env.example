# Odoo Configuration
ODOO_DOMAIN=odoo.yourdomain.com

# Odoo Version - Options:
# - Docker images: 17.0, 16.0, 15.0, 14.0 (stable releases)
# - Source code: 17.4, 17.3, etc. (use saas-X.Y branch from GitHub)
# Note: For versions like 17.4, deployment will build from source
ODOO_VERSION=17.0

ODOO_REPLICAS=1
ODOO_ADMIN_PASSWD=change_this_master_password_now

# PostgreSQL Configuration
POSTGRES_VERSION=17
POSTGRES_USER=odoo
POSTGRES_PASSWORD=odoo_secure_password_change_me
POSTGRES_DB=postgres

# Let's Encrypt SSL
LETSENCRYPT_EMAIL=your-email@example.com

# Storage
ODOO_DATA_SIZE=20Gi
POSTGRES_DATA_SIZE=10Gi

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2:00 AM
